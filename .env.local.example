# Clerk (optional; app works with anonymous cookie if missing)
CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# Neon Postgres
DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=require

# Upstash Redis
UPSTASH_REDIS_REST_URL=https://xxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxxxx

# OpenAI (optional; generator falls back to free parametric)
OPENAI_API_KEY=sk-xxxx

# Explanation tuning (optional)
# Target words for math explanations and soft min/max clamps
EXPLANATION_TARGET_WORDS=140
EXPLANATION_WORD_MIN=80
EXPLANATION_WORD_MAX=180
# Bump this to invalidate cached explanations (exp:v<version>:*)
EXPLANATION_CACHE_VERSION=1
# Pass through the raw model explanation without structural edits (true/false)
# Default is true in code so plain-English explanations are preserved.
EXPLANATION_PASSTHROUGH=true
# Explanation style/format hints for the explainer (kept for future tuning)
EXPLANATION_STYLE=simple
EXPLANATION_FORMAT=simple

# NextAuth (required for auth)
NEXTAUTH_SECRET=your_long_random_secret
# Use your prod URL in production; keep localhost in dev
NEXTAUTH_URL=http://localhost:3000
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email (Resend)
RESEND_API_KEY=re_xxxxx
EMAIL_FROM=BlobPrep <no-reply@yourdomain.com>
# Optional: keep your personal inbox as the contact address
EMAIL_REPLY_TO=blobprepconnect@gmail.com

# Stripe (later; UI intact)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_MONTHLY=price_xxx
STRIPE_PRICE_ID_YEARLY=price_yyy

# Dev helpers
UNLIMITED_EMAILS=admin@blobprep.com

# Difficulty mix (optional; easy,medium,hard weights)
# Defaults to 0.2,0.55,0.25 if unset
NEXT_QUESTION_DIFFICULTY_WEIGHTS=0.2,0.55,0.25

# UI: auto-show explanations even on correct answers (true/false)
NEXT_PUBLIC_ALWAYS_SHOW_EXPLANATIONS=false
